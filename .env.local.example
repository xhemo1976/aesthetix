# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# OpenAI API (für AI Chatbot)
# Erstelle einen Account auf https://platform.openai.com und hole dir einen API Key
# Der Chatbot verwendet GPT-4o-mini für schnelle und günstige Antworten
OPENAI_API_KEY=sk-xxxxxxxxxxxx

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Resend (Email)
# Erstelle einen Account auf https://resend.com und hole dir einen API Key
# Kostenlos: 3000 Emails/Monat
RESEND_API_KEY=re_xxxxxxxxxxxx
#
# Absender-Email (muss bei Resend verifiziert sein)
# Für Tests kannst du "onboarding@resend.dev" verwenden
# Für Produktion: deine eigene Domain verifizieren
RESEND_FROM_EMAIL=Esylana <onboarding@resend.dev>
# Beispiel mit eigener Domain:
# RESEND_FROM_EMAIL=Termine <termine@deine-klinik.de>

# App URL
# Diese URL wird für Buchungslinks, Email-Bestätigungen und QR-Codes verwendet
#
# Entwicklung:
NEXT_PUBLIC_APP_URL=http://localhost:3000
#
# Produktion (Beispiele - wähle deine eigene Domain):
# NEXT_PUBLIC_APP_URL=https://mein-projekt.vercel.app
# NEXT_PUBLIC_APP_URL=https://booking.meine-klinik.de
# NEXT_PUBLIC_APP_URL=https://termine.meine-firma.de
